<aside
  class="w-64 bg-gradient-to-b from-slate-900 to-slate-950 text-slate-300 min-h-screen flex flex-col justify-between">

  <!-- Top Section -->
  <div>

    <!-- Logo -->
    <div class="flex items-center gap-3 px-6 py-6 border-b border-slate-800">
      <div class="w-10 h-10 bg-teal-600 rounded-lg flex items-center justify-center">
        <!-- Bolt Icon -->
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path d="M11.3 1L2 11h6l-1 8 9.3-10h-6l1-8z" />
        </svg>
      </div>
      <span class="text-lg font-semibold text-white">EnergyGuard</span>
    </div>

    <!-- Menu -->
    <nav class="mt-6 space-y-2 px-4">

      <!-- Dashboard -->
      <a href="/user/dashboard" class="flex items-center gap-3 px-4 py-3 rounded-lg transition
         {{#if (eq active 'dashboard')}} bg-slate-800 text-teal-400 {{else}} hover:bg-slate-800 {{/if}}">
        <!-- Chart Bar Icon -->
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5"
          viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 3v18h18M9 17V9m4 8V5m4 12v-6" />
        </svg>
        <span>Dashboard</span>
      </a>

      <!-- Analytics -->
      <!-- <a href="/analytics" class="flex items-center gap-3 px-4 py-3 rounded-lg transition
         {{#if (eq active 'analytics')}} bg-slate-800 text-teal-400 {{else}} hover:bg-slate-800 {{/if}}">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5"
          viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 17l6-6 4 4 8-8" />
        </svg>
        <span>Analytics</span>
      </a> -->

      <!-- Predictions -->
      <a href="/user/predictions" class="flex items-center gap-3 px-4 py-3 rounded-lg transition
         {{#if (eq active 'predictions')}} bg-slate-800 text-teal-400 {{else}} hover:bg-slate-800 {{/if}}">
        <!-- Chart Pie Icon -->
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5"
          viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 3v9.75H21A9 9 0 1111.25 3z" />
        </svg>
        <span>Predictions</span>
      </a>

      <!-- Alerts -->
      <a href="/alerts" class="flex items-center gap-3 px-4 py-3 rounded-lg transition
         {{#if (eq active 'alerts')}} bg-slate-800 text-teal-400 {{else}} hover:bg-slate-800 {{/if}}">
        <!-- Bell Icon -->
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5"
          viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M15 17h5l-1.4-1.4A2 2 0 0118 14V11a6 6 0 10-12 0v3c0 .53-.21 1.04-.59 1.41L4 17h5m6 0a3 3 0 11-6 0" />
        </svg>
        <span>Alerts</span>
      </a>

      <!-- Settings -->
      <a href="/settings" class="flex items-center gap-3 px-4 py-3 rounded-lg transition
         {{#if (eq active 'settings')}} bg-slate-800 text-teal-400 {{else}} hover:bg-slate-800 {{/if}}">
        <!-- Cog Icon -->
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5"
          viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M11.25 3h1.5M4.22 5.64l1.06-1.06M3 11.25v1.5m2.28 6.11l-1.06 1.06M11.25 21h1.5m6.11-2.28l1.06 1.06M21 11.25v1.5m-2.28-6.11l1.06-1.06M12 8.25a3.75 3.75 0 100 7.5 3.75 3.75 0 000-7.5z" />
        </svg>
        <span>Settings</span>
      </a>

      <!-- Profile -->
      <a href="/profile" class="flex items-center gap-3 px-4 py-3 rounded-lg transition
         {{#if (eq active 'profile')}} bg-slate-800 text-teal-400 {{else}} hover:bg-slate-800 {{/if}}">
        <!-- User Icon -->
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5"
          viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M15.75 6.75a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.5 20.25a8.25 8.25 0 0115 0" />
        </svg>
        <span>Profile</span>
      </a>

    </nav>

  </div>

  <!-- Bottom Section -->
  <div class="px-4 pb-6">

    <div class="bg-slate-800 rounded-lg p-4 flex items-center gap-3 mb-4">
      <div class="w-10 h-10 rounded-full bg-teal-600 flex items-center justify-center text-white font-semibold">
        {{user.initials}}
      </div>
      <div>
        <p class="text-white font-medium text-sm">{{user.name}}</p>
        <p class="text-slate-400 text-xs">{{user.role}}</p>
      </div>
    </div>

    <a href="/logout" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-slate-800 transition">
      <!-- Logout Icon -->
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5"
        viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round"
          d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6A2.25 2.25 0 005.25 5.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M18 12h-9m0 0l3-3m-3 3l3 3" />
      </svg>
      <span>Sign Out</span>
    </a>

  </div>

</aside>