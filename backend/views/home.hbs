    }

    .btn {
      display: block;
      padding: 14px;
      border-radius: 12px;
      text-decoration: none;
      font-weight: 600;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn.user {
      background: #0d6efd;
      color: #fff;
    }

    .btn.admin {
      background: #198754;
      color: #fff;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    footer {
      margin-top: 25px;
      font-size: 0.75rem;
      opacity: 0.8;
    }
  </style>
</head>

