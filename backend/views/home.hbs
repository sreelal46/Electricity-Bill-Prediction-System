  <!-- Home page CSS -->
  <style>
    * {
      box-sizing: border-box;
      font-family: "Segoe UI", sans-serif;
    }

    body {
      margin: 0;
      height: 100vh;
      background: whitesmoke;
      display: flex;
      align-items: center;
      justify-content: center;
