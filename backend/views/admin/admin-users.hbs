<!-- ADMIN USERS PAGE -->
<link rel="stylesheet" href="/css/admin-users.css">
<style>
  .new-registration-btn {
    margin-right: 10px;
    margin-top: 18px;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 600;
    font-family: "DM Sans", sans-serif;
    background: linear-gradient(135deg, #3b82f6 0%, #6366f1 100%);
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
  }

  .new-registration-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(59, 130, 246, 0.4);
  }

  .new-registration-btn:active {
    transform: translateY(0);
  }

  .new-registration-btn i {
    width: 20px;
    height: 20px;
  }

  /* Alternative styles */

  /* Outline variant */
  .new-registration-btn.outline {
    background: transparent;
    color: #3b82f6;
    border: 2px solid #3b82f6;
    box-shadow: none;
  }

  .new-registration-btn.outline:hover {
    background: #3b82f6;
    color: white;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
  }

  /* Large variant */
  .new-registration-btn.large {
    padding: 1rem 2rem;
    font-size: 1.0625rem;
  }

  /* Small variant */
  .new-registration-btn.small {
    padding: 0.625rem 1rem;
    font-size: 0.875rem;
  }

  /* Icon only variant */
  .new-registration-btn.icon-only {
    padding: 0.875rem;
    border-radius: 50%;
  }

  .new-registration-btn.icon-only span {
    display: none;
  }
</style>
<div class="container">
  <!-- Page Header -->
  <div class="page-header">
    <div class="header-content">
      <a href="/admin/dashboard" class="back-link">
        <i data-lucide="arrow-left"></i>
        <span>Back to Dashboard</span>
      </a>
      <h1>
        <i data-lucide="users"></i>
        User Management
      </h1>
      <p class="header-subtitle">Manage and monitor all registered users</p>
    </div>

    <a href="/admin/registration" class="new-registration-btn outline">
      <i data-lucide="user-plus"></i>
      <span>New Registration</span>
    </a>
    <div class="header-stats">
      <div class="stat-pill">
        <span class="stat-value">{{users.length}}</span>
        <span class="stat-label">Total Users</span>
      </div>
    </div>
  </div>

  {{#if users.length}}
  <!-- Users Grid -->
  <div class="users-grid">
    {{#each users}}
    <div class="user-card">
      <!-- Card Header -->
      <div class="user-header">
        <div class="user-avatar-wrapper">
          <div class="user-avatar">
            {{#if user_initials}}
            {{user_initials}}
            {{else}}
            {{substring user_name 0 1}}
            {{/if}}
          </div>
          <div class="user-info">
            <h3 class="user-name">{{user_name}}</h3>
            <p class="user-id">ID: {{user_id}}</p>
          </div>
        </div>
        <span class="status-badge {{status}}">
          <i data-lucide="{{#if (eq status 'active')}}check-circle{{else}}x-circle{{/if}}"></i>
          {{status}}
        </span>
      </div>

      <!-- Card Body -->
      <div class="user-details2">
        <div class="detail-row">
          <div class="detail-icon">
            <i data-lucide="zap"></i>
          </div>
          <div class="detail-content">
            <span class="detail-label">Approved Load</span>
            <span class="detail-value">{{approved_load_kw}} kW</span>
          </div>
        </div>

        <div class="detail-row">
          <div class="detail-icon">
            <i data-lucide="activity"></i>
          </div>
          <div class="detail-content">
            <span class="detail-label">Phase</span>
            <span class="detail-value">{{approved_phase}}</span>
          </div>
        </div>

        <div class="detail-row">
          <div class="detail-icon">
            <i data-lucide="calendar"></i>
          </div>
          <div class="detail-content">
            <span class="detail-label">Registered</span>
            <span class="detail-value">{{registration_date}}</span>
          </div>
        </div>
      </div>

      <!-- Card Footer -->
      <div class="user-actions">
        <a href="/admin/user/{{user_id}}/latest" class="action-btn primary">
          <i data-lucide="eye"></i>
          <span>View Latest</span>
        </a>
        <a href="/admin/daily-summary/{{user_id}}" class="action-btn secondary">
          <i data-lucide="bar-chart-2"></i>
          <span>Daily Summary</span>
        </a>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <!-- Empty State -->
  <div class="empty-state">
    <div class="empty-icon">
      <i data-lucide="users"></i>
    </div>
    <h3>No Users Found</h3>
    <p>There are no registered users in the system yet.</p>
  </div>
  {{/if}}
</div>

<script>
  // Initialize Lucide icons
  lucide.createIcons();
</script>