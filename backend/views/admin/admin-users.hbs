<style>
  * {
    box-sizing: border-box;
    font-family: "Segoe UI", sans-serif;
  }

  body {
    background: #f4f6f8;
    margin: 0;
    padding: 30px;
  }

  .admin-users-page {
    max-width: 1100px;
    margin: auto;
  }

  h1 {
    margin-bottom: 25px;
    color: #222;
  }

  .users-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
  }

  .user-card {
    background: #fff;
    border-radius: 14px;
    padding: 20px;
    box-shadow: 0 8px 22px rgba(0, 0, 0, 0.06);
    transition: transform 0.2s ease;
  }

  .user-card:hover {
    transform: translateY(-4px);
  }

  .user-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
  }

  .user-header h3 {
    margin: 0;
    color: #0d6efd;
  }

  .status {
    padding: 4px 10px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .status.active {
    background: #e8f5e9;
    color: #198754;
  }

  .status.inactive {
    background: #f8d7da;
    color: #dc3545;
  }

  .user-body p {
    margin: 6px 0;
    color: #555;
  }

  .user-footer {
    display: flex;
    flex-direction: row;
    gap: 10px;
    margin-top: 15px;
  }

  .btn {
    display: inline-block;
    text-decoration: none;
    padding: 8px 10px;
    background: #0d6efd;
    color: #fff;
    border-radius: 8px;
    font-size: 0.85rem;
  }

  .btn:hover {
    background: #0b5ed7;
  }

  .back-btn {
    display: inline-block;
    margin-top: 25px;
    text-decoration: none;
    color: #0d6efd;
    font-weight: 500;
  }
</style>

<div class="admin-users-page">
  <a href="/" class="back-btn">
    ‚Üê Back to Home
  </a>
  <h1>üë• All Users</h1>

  {{#if users.length}}
  <div class="users-grid">

    {{#each users}}
    <div class="user-card">

      <div class="user-header">
        <h3>{{user_name:}}</h3>
        <span class="status {{status}}">
          {{status}}
        </span>
      </div>

      <div class="user-body">
        <p><strong>User ID:</strong> {{user_id}}</p>
        <p><strong>Approved Load:</strong> {{approved_load_kw}} kW</p>
        <p><strong>Phase:</strong> {{approved_phase}}</p>
        <p><strong>Created:</strong> {{registration_date}}</p>
      </div>

      <div class="user-footer">
        <a href="/admin/user/{{user_id}}/latest" class="btn">
          View Latest Reading
        </a>
        <a href="/admin/daily-summary/{{user_id}}" class="btn">
          View Daily summary
        </a>
      </div>

    </div>
    {{/each}}

  </div>
  {{else}}
  <p>No users found.</p>
  {{/if}}

  <a href="/admin/dashboard" class="back-btn">
    ‚Üê Back to Dashboard
  </a>

</div>