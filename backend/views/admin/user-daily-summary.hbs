      { date: "2026-03-05", total_units: 7.50, day: "Wed" },
      { date: "2026-03-06", total_units: 6.20, day: "Thu" }
    ];

    let currentChart = null;

    // Format date to show simple format based on period
    function formatDateLabel(dateStr, day, index, totalDays) {
      const date = new Date(dateStr);
      const dayNum = date.getDate();
      const month = date.toLocaleDateString('en-US', { month: 'short' });

      // For week or short periods, show day name
      if (totalDays <= 7) {
        return day;
      }
      // For longer periods, show date number and month
      else {
        return `${dayNum} ${month}`;
      }
    }

    // Calculate statistics
    function calculateStats(data) {
      const values = data.map(d => d.total_units);
      const total = values.reduce((sum, val) => sum + val, 0);
      const avg = total / values.length;
      const max = Math.max(...values);
      const min = Math.min(...values);

      return { avg, max, min, total };
    }

    // Update stats display
    function updateStats(data) {
      const stats = calculateStats(data);

      document.getElementById('avgDaily').textContent = stats.avg.toFixed(2);
      document.getElementById('peakDay').textContent = stats.max.toFixed(2);
      document.getElementById('lowestDay').textContent = stats.min.toFixed(2);
      document.getElementById('totalConsumption').textContent = stats.total.toFixed(2);
    }

    // Create the bar chart
    function createChart(data) {
      const ctx = document.getElementById('trendChart').getContext('2d');

      // Get stats for coloring
      const stats = calculateStats(data);

      // Adjust bar thickness based on number of days
      let barThickness = 45;
      if (data.length > 20) {
        barThickness = 30; // Thinner bars for month view
      } else if (data.length > 14) {
        barThickness = 35; // Medium bars for 2 weeks
      }

      // Create colors array - alternating blue and red like the design
      const backgroundColors = data.map((item, index) => {
        if (index % 2 === 0) {
          return 'rgba(99, 102, 241, 0.85)'; // Blue
        } else {
          return 'rgba(239, 68, 68, 0.85)'; // Red
        }
      });

      const hoverColors = data.map((item, index) => {
        if (index % 2 === 0) {
          return 'rgba(99, 102, 241, 1)'; // Blue
        } else {
          return 'rgba(239, 68, 68, 1)'; // Red
        }
      });

      // Destroy existing chart if it exists
      if (currentChart) {
        currentChart.destroy();
      }

      currentChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: data.map((d, index) => formatDateLabel(d.date, d.day, index, data.length)),
          datasets: [{
            label: 'Daily Consumption (kWh)',
            data: data.map(d => d.total_units),
            backgroundColor: backgroundColors,
            hoverBackgroundColor: hoverColors,
            borderRadius: {
              topLeft: 6,
              topRight: 6,
              bottomLeft: 0,
              bottomRight: 0
            },
            borderSkipped: false,
            barThickness: barThickness,
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: false
            },
            tooltip: {
              enabled: true,
              backgroundColor: 'rgba(15, 23, 42, 0.95)',
              titleColor: '#fff',
              bodyColor: '#cbd5e1',
              titleFont: {
                size: 13,
                weight: '600',
                family: 'DM Sans'
              },
              bodyFont: {
                size: 12,
                family: 'JetBrains Mono'
              },
              padding: 10,
              displayColors: false,
              callbacks: {
                title: function (context) {
                  return context[0].label;
                },
                label: function (context) {
                  return `${context.parsed.y.toFixed(2)} kWh`;
                }
              }
            }
          },
          scales: {
            x: {
              grid: {
                display: false,
                drawBorder: false
              },
              ticks: {
                color: '#94a3b8',
                font: {
                  size: 10,
                  family: 'DM Sans',
                  weight: '400'
                },
                maxRotation: 0,
                minRotation: 0,
                autoSkip: true,
                maxTicksLimit: data.length > 20 ? 15 : data.length
              }
            },
            y: {
              beginAtZero: true,
              border: {
                display: false
              },
              grid: {
                color: 'rgba(148, 163, 184, 0.08)',
                drawBorder: false,
                lineWidth: 1
              },
              ticks: {
                color: '#94a3b8',
                font: {
                  size: 11,
                  family: 'DM Sans',
                  weight: '400'
                },
                callback: function (value) {
                  return value.toFixed(1) + ' kWh';
                },
                padding: 8
              }
            }
          }
        }
      });
    }

    // Change period
    function changePeriod(days) {
      // Update active button
      document.querySelectorAll('.period-btn').forEach(btn => {
        btn.classList.remove('active');
      });
      event.target.classList.add('active');

      // Get last N days
      const data = allDailyData.slice(-days);

      // Update card title
      const titleMap = {
        7: '7-Day Energy Trend',
        10: '10-Day Energy Trend',
        14: '2-Week Energy Trend',
        30: 'Monthly Energy Trend'
      };
      document.getElementById('cardTitle').textContent = titleMap[days] || `${days}-Day Energy Trend`;

      // Update page subtitle
      const subtitleMap = {
        7: 'Daily energy usage over the last 7 days',
        10: 'Daily energy usage over the last 10 days',
        14: 'Daily energy usage over the last 2 weeks',
        30: 'Daily energy usage over the last 30 days'
      };
      document.getElementById('pageSubtitle').textContent = subtitleMap[days] || `Daily energy usage over the last ${days} days`;

      // Update chart and stats
      createChart(data);
      updateStats(data);
    }

    // Initialize when DOM is loaded
    document.addEventListener('DOMContentLoaded', function () {
      const initialData = allDailyData.slice(-30); // Show last 30 days initially
      createChart(initialData);
      updateStats(initialData);

      // Initialize Lucide icons
      lucide.createIcons();
    });

