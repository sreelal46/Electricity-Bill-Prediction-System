      );
      const lastNDays = sortedRecords.slice(0, days).reverse();
      
      const chartData = lastNDays.map(record => ({
        date: record.date,
        total_units: record.total_units,
        day: new Date(record.date).toLocaleDateString('en-US', { weekday: 'short' })
      }));
      
      return chartData;
      */

      return allDailyData;
    }
  </script>
