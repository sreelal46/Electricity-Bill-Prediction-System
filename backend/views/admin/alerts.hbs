    // Get icon based on alert type
    function getAlertIcon(alertType, severity) {
      const iconMap = {
        'High Power Usage': 'zap',
        'Load Threshold Warning': 'alert-triangle',
        'Voltage Fluctuation': 'activity',
        'Peak Demand Alert': 'trending-up',
        'System Maintenance': 'settings',
        'Energy Consumption Spike': 'bar-chart-2'
      };

      return iconMap[alertType] || 'bell';
    }

    // Format timestamp
    function formatTimestamp(timestamp) {
      const date = new Date(timestamp);
      return date.toLocaleString('en-US', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit'
      });
    }

    // Render alerts
    function renderAlerts(alertsData) {
      const container = document.getElementById('alertsContainer');

      if (!alertsData || alertsData.length === 0) {
        container.innerHTML = `
          <div class="no-alerts">
            <div class="no-alerts-icon">
              <i data-lucide="check-circle" style="width: 40px; height: 40px;"></i>
            </div>
            <h2>All Clear!</h2>
            <p>No active alerts at the moment. Your system is running smoothly.</p>
          </div>
        `;
        lucide.createIcons();
        return;
      }

      const alertsHTML = alertsData.map(alert => {
        const icon = getAlertIcon(alert.alert_type, alert.severity);

        return `
          <div class="alert-card severity-${alert.severity}">
            <div class="alert-header">
              <div class="alert-type-wrapper">
                <div class="alert-icon">
                  <i data-lucide="${icon}" style="width: 22px; height: 22px;"></i>
                </div>
                <div class="alert-type">${alert.alert_type}</div>
              </div>
              <span class="severity-badge">${alert.severity}</span>
            </div>

            <div class="alert-body">
              <div class="alert-message">
                ${alert.message}
              </div>
              
              <div class="alert-time">
                <i data-lucide="clock"></i>
                ${formatTimestamp(alert.timestamp)}
              </div>
            </div>

            <div class="alert-footer">
              <div class="alert-user-info">
                <div class="alert-user-avatar">
                  <i data-lucide="user" style="width: 12px; height: 12px;"></i>
                </div>
                <span class="alert-user-name">John Doe</span>
                <span style="color: var(--border);">â€¢</span>
                <span>USER001</span>
              </div>
              <span class="alert-id">${alert.id}</span>
            </div>
          </div>
        `;
      }).join('');

      container.innerHTML = `<div class="alerts-grid">${alertsHTML}</div>`;

      // Initialize Lucide icons
      lucide.createIcons();
    }

    // Initialize when DOM is loaded
    document.addEventListener('DOMContentLoaded', function () {
