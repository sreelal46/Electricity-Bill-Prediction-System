<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Alerts - Energy Dashboard</title>

  <!-- Fonts -->
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=JetBrains+Mono:wght@400;600&display=swap"
    rel="stylesheet">

  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest"></script>

  <style>
    /* CSS Variables */
    :root {
      --bg-primary: #f8fafc;
      --bg-secondary: #f1f5f9;
      --bg-card: #ffffff;
      --text-primary: #0f172a;
      --text-secondary: #64748b;
      --accent-green: #10b981;
      --accent-blue: #3b82f6;
      --accent-yellow: #f59e0b;
      --accent-red: #ef4444;
      --accent-orange: #f97316;
      --accent-purple: #8b5cf6;
      --accent-indigo: #6366f1;
      --border: rgba(148, 163, 184, 0.2);
      --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.05);
      --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
      --shadow-lg: 0 12px 40px rgba(59, 130, 246, 0.2);
      --radius-sm: 8px;
      --radius-md: 12px;
      --radius-lg: 16px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: "DM Sans", sans-serif;
      background: var(--bg-primary);
      color: var(--text-primary);
      line-height: 1.6;
      min-height: 100vh;
      background-image:
        radial-gradient(circle at 20% 50%, rgba(59, 130, 246, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(16, 185, 129, 0.03) 0%, transparent 50%);
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
    }

    /* Header */
    .page-header {
      margin-bottom: 2rem;
      animation: fadeInDown 0.6s ease-out;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--accent-blue);
      text-decoration: none;
      font-weight: 500;
      margin-bottom: 1rem;
      transition: all 0.2s ease;
    }

    .back-link:hover {
      color: var(--accent-indigo);
      transform: translateX(-4px);
    }

    h1 {
      font-size: 2.5rem;
      background: linear-gradient(135deg, var(--text-primary) 0%, var(--accent-red) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .subtitle {
      color: var(--text-secondary);
      font-size: 1.125rem;
    }

    /* Alerts Grid */
    .alerts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
      gap: 1.5rem;
      animation: fadeInUp 0.6s ease-out 0.1s backwards;
    }

    /* Alert Card */
    .alert-card {
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: var(--radius-lg);
      padding: 1.5rem;
      box-shadow: var(--shadow-sm);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .alert-card::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 4px;
    }

    .alert-card:hover {
      transform: translateY(-4px);
      box-shadow: var(--shadow-lg);
    }

    /* Severity Styles */
    .alert-card.severity-HIGH::before {
      background: var(--accent-red);
    }

    .alert-card.severity-MEDIUM::before {
      background: var(--accent-orange);
    }

    .alert-card.severity-LOW::before {
      background: var(--accent-green);
    }

    .alert-card.severity-HIGH {
      border-color: rgba(239, 68, 68, 0.2);
      background: linear-gradient(to bottom, rgba(239, 68, 68, 0.02), var(--bg-card));
    }

    .alert-card.severity-MEDIUM {
      border-color: rgba(249, 115, 22, 0.2);
      background: linear-gradient(to bottom, rgba(249, 115, 22, 0.02), var(--bg-card));
    }

    .alert-card.severity-LOW {
      border-color: rgba(16, 185, 129, 0.2);
      background: linear-gradient(to bottom, rgba(16, 185, 129, 0.02), var(--bg-card));
    }

    /* Alert Header */
    .alert-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 1rem;
      gap: 1rem;
    }

    .alert-type-wrapper {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      flex: 1;
    }

    .alert-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      border-radius: var(--radius-md);
      flex-shrink: 0;
    }

    .severity-HIGH .alert-icon {
      background: rgba(239, 68, 68, 0.1);
      color: var(--accent-red);
    }

    .severity-MEDIUM .alert-icon {
      background: rgba(249, 115, 22, 0.1);
      color: var(--accent-orange);
    }

    .severity-LOW .alert-icon {
      background: rgba(16, 185, 129, 0.1);
      color: var(--accent-green);
    }

    .alert-type {
      font-weight: 600;
      color: var(--text-primary);
      font-size: 1.125rem;
    }

    .severity-badge {
      font-size: 0.75rem;
      font-weight: 700;
      padding: 0.375rem 0.875rem;
      border-radius: var(--radius-sm);
      color: white;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      white-space: nowrap;
    }

    .severity-HIGH .severity-badge {
      background: var(--accent-red);
    }

    .severity-MEDIUM .severity-badge {
      background: var(--accent-orange);
    }

    .severity-LOW .severity-badge {
      background: var(--accent-green);
    }

    /* Alert Body */
    .alert-body {
      margin-bottom: 1rem;
    }

    .alert-body p {
      margin: 0.5rem 0;
      color: var(--text-secondary);
      font-size: 0.9375rem;
      line-height: 1.6;
    }

    .alert-body strong {
      color: var(--text-primary);
      font-weight: 600;
    }

    .alert-message {
      background: var(--bg-secondary);
      padding: 0.75rem 1rem;
      border-radius: var(--radius-sm);
      margin: 0.5rem 0 1rem;
      border-left: 3px solid var(--border);
      font-size: 0.9375rem;
      color: var(--text-primary);
    }

    .alert-time {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--text-secondary);
      font-size: 0.875rem;
      font-family: "JetBrains Mono", monospace;
    }

    .alert-time i {
      width: 16px;
      height: 16px;
    }

    /* Alert Footer */
    .alert-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 1rem;
      border-top: 1px solid var(--border);
    }

    .alert-user-info {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.8125rem;
      color: var(--text-secondary);
    }

    .alert-user-avatar {
      width: 24px;
      height: 24px;
      background: linear-gradient(135deg, var(--accent-blue) 0%, var(--accent-indigo) 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 0.65rem;
      font-weight: 700;
      flex-shrink: 0;
    }

    .alert-user-name {
      font-weight: 600;
      color: var(--text-primary);
    }

    .alert-id {
      color: var(--text-secondary);
      font-size: 0.75rem;
      font-family: "JetBrains Mono", monospace;
    }

    /* No Alerts */
    .no-alerts {
      text-align: center;
      padding: 4rem 2rem;
      background: var(--bg-card);
      border: 2px dashed var(--border);
      border-radius: var(--radius-lg);
      animation: fadeInUp 0.6s ease-out 0.1s backwards;
    }

    .no-alerts-icon {
      width: 80px;
      height: 80px;
      margin: 0 auto 1.5rem;
      background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(16, 185, 129, 0.05) 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--accent-green);
    }

    .no-alerts h2 {
      font-size: 1.5rem;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    .no-alerts p {
      color: var(--text-secondary);
      font-size: 1rem;
    }

    /* Animations */
    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Responsive */
    @media (max-width: 768px) {
      .container {
        padding: 1rem;
      }

      h1 {
        font-size: 1.75rem;
      }

      .alerts-grid {
        grid-template-columns: 1fr;
      }

      .alert-header {
        flex-direction: column;
        align-items: flex-start;
      }

      .alert-footer {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.75rem;
      }
    }
  </style>
</head>

