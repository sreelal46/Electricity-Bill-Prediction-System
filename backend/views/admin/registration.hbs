<!-- User Registration Main Content -->
<!-- This goes in the main content area for Admin Panel -->

<link rel="stylesheet" href="/css/common-registration.css">
<!-- Axios CDN -->
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<div class="registration-wrapper">
  <div class="registration-container">
    <!-- Registration Card -->
    <div class="registration-card">
      <div class="card-header">
        <div class="card-header-content">
          <div class="card-icon">
            <i data-lucide="user-plus"></i>
          </div>
          <div class="card-header-text">
            <h2 class="card-title">New User Registration</h2>
            <p class="card-subtitle">Add a new consumer to the system</p>
          </div>
        </div>
      </div>

      <!-- Success Message -->
      <div class="success-message" id="successMessage">
        <i data-lucide="check-circle"></i>
        <span class="success-message-text">User registered successfully! Redirecting...</span>
      </div>

      <!-- Error Alert -->
      <div class="error-alert" id="errorAlert">
        <i data-lucide="alert-circle"></i>
        <span class="error-alert-text" id="errorAlertText">Registration failed. Please try again.</span>
      </div>

      <!-- Registration Form -->
      <form id="registrationForm">
        <div class="form-grid">
          <!-- Consumer Number -->
          <div class="form-group">
            <label class="form-label">
              <i data-lucide="hash"></i>
              Consumer Number
              <span class="required">*</span>
            </label>
            <div class="form-input-wrapper">
              <input type="text" class="form-input" id="consumerNumber" name="consumerNumber"
                placeholder="Enter consumer number" required>
              <i data-lucide="hash" class="input-icon"></i>
            </div>
            <div class="form-hint">
              <i data-lucide="info"></i>
              Unique identification number
            </div>
            <div class="error-message" id="consumerNumberError" style="display: none;">
              <i data-lucide="alert-circle"></i>
              <span></span>
            </div>
          </div>

          <!-- Name -->
          <div class="form-group">
            <label class="form-label">
              <i data-lucide="user"></i>
              Name
              <span class="required">*</span>
            </label>
            <div class="form-input-wrapper">
              <input type="text" class="form-input" id="name" name="name" placeholder="Enter full name" required>
              <i data-lucide="user" class="input-icon"></i>
            </div>
            <div class="error-message" id="nameError" style="display: none;">
              <i data-lucide="alert-circle"></i>
              <span></span>
            </div>
          </div>

          <!-- Phone Number -->
          <div class="form-group">
            <label class="form-label">
              <i data-lucide="phone"></i>
              Phone Number
              <span class="required">*</span>
            </label>
            <div class="form-input-wrapper">
              <input type="tel" class="form-input" id="phoneNumber" name="phoneNumber" placeholder="Enter phone number"
                required>
              <i data-lucide="phone" class="input-icon"></i>
            </div>
            <div class="error-message" id="phoneNumberError" style="display: none;">
              <i data-lucide="alert-circle"></i>
              <span></span>
            </div>
          </div>

          <!-- Email Address -->
          <div class="form-group">
            <label class="form-label">
              <i data-lucide="mail"></i>
              Email Address
              <span class="required">*</span>
            </label>
            <div class="form-input-wrapper">
              <input type="email" class="form-input" id="email" name="email" placeholder="Enter email address" required>
              <i data-lucide="mail" class="input-icon"></i>
            </div>
            <div class="error-message" id="emailError" style="display: none;">
              <i data-lucide="alert-circle"></i>
              <span></span>
            </div>
          </div>

          <!-- Address -->
          <div class="form-group form-grid-full">
            <label class="form-label">
              <i data-lucide="map-pin"></i>
              Address
              <span class="required">*</span>
            </label>
            <div class="form-input-wrapper">
              <textarea class="form-textarea" id="address" name="address" placeholder="Enter complete address"
                required></textarea>
              <i data-lucide="map-pin" class="input-icon"></i>
            </div>
            <div class="error-message" id="addressError" style="display: none;">
              <i data-lucide="alert-circle"></i>
              <span></span>
            </div>
          </div>

          <!-- Approved Load -->
          <div class="form-group">
            <label class="form-label">
              <i data-lucide="zap"></i>
              Approved Load (kW)
              <span class="required">*</span>
            </label>
            <div class="form-input-wrapper">
              <input type="number" class="form-input" id="approvedLoad" name="approvedLoad" placeholder="e.g., 5"
                step="0.1" min="0" required>
              <i data-lucide="zap" class="input-icon"></i>
            </div>
            <div class="error-message" id="approvedLoadError" style="display: none;">
              <i data-lucide="alert-circle"></i>
              <span></span>
            </div>
          </div>

          <!-- Phase Type -->
          <div class="form-group">
            <label class="form-label">
              <i data-lucide="activity"></i>
              Phase Type
              <span class="required">*</span>
            </label>
            <div class="form-input-wrapper">
              <select class="form-select" id="phaseType" name="phaseType" required>
                <option value="">Select phase type</option>
                <option value="SINGLE">Single Phase</option>
                <option value="THREE">Three Phase</option>
              </select>
              <i data-lucide="activity" class="input-icon"></i>
            </div>
            <div class="error-message" id="phaseTypeError" style="display: none;">
              <i data-lucide="alert-circle"></i>
              <span></span>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="submit-btn" id="submitBtn">
          <i data-lucide="user-plus"></i>
          Register User
        </button>
      </form>
    </div>
  </div>
</div>
<script src="/js/admin-registration.js"></script>