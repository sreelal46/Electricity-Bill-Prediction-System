<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Portal Login - EnergyGuard</title>
  <link rel="stylesheet" href="/css/common.css">
  <link rel="stylesheet" href="/css/admin-login.css">
  <!-- Axios CDN -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>


</head>

<body>

  <div class="login-container">
    <!-- Logo -->
    <div class="login-logo">
      <i data-lucide="shield-check"></i>
    </div>

    <h1 class="login-title">Admin Portal Login</h1>
    <p class="login-subtitle">
      Or <a href="/">return to home page</a>
    </p>

    <!-- Login Card -->
    <div class="login-card">
      <!-- Toggle -->
      <div class="login-toggle">
        <a href="/user/login" class="toggle-option">
          User Login
        </a>
        <div class="toggle-option active">
          Admin Login
        </div>
      </div>

      <!-- Success Alert -->
      <div class="alert-message success-alert" id="successAlert">
        <i data-lucide="check-circle"></i>
        <div class="alert-content">
          <div class="alert-title">Login Successful!</div>
          <div class="alert-text">Redirecting to admin dashboard...</div>
        </div>
      </div>

      <!-- Error Alert -->
      <div class="alert-message error-alert" id="errorAlert">
        <i data-lucide="alert-circle"></i>
        <div class="alert-content">
          <div class="alert-title">Login Failed</div>
          <div class="alert-text" id="errorAlertText">Invalid email or password. Please try again.</div>
        </div>
      </div>

      <!-- Form -->
      <form id="adminLoginForm">

        <!-- Email Address -->
        <div class="form-group">
          <label class="form-label">Email Address</label>
          <div class="input-icon">
            <i data-lucide="mail"></i>
            <input type="email" id="email" name="email" class="form-input" placeholder="admin@energyguard.com" required
              autocomplete="email" />
          </div>
          <div class="field-error" id="emailError">
            <i data-lucide="alert-circle"></i>
            <span></span>
          </div>
        </div>

        <!-- Password -->
        <div class="form-group">
          <label class="form-label">Password</label>
          <div class="input-icon">
            <i data-lucide="lock"></i>
            <input type="password" id="password" name="password" class="form-input" placeholder="Enter your password"
              required autocomplete="current-password" />
          </div>
          <div class="field-error" id="passwordError">
            <i data-lucide="alert-circle"></i>
            <span></span>
          </div>
        </div>

        <!-- Submit -->
        <button type="submit" class="submit-btn" id="submitBtn">
          <span>Sign in</span>
          <i data-lucide="arrow-right"></i>
        </button>
      </form>

      <!-- Security Info Banner -->
      <div class="info-banner">
        <i data-lucide="shield-alert"></i>
        <div class="info-banner-content">
          <div class="info-banner-title">Secure Admin Access</div>
          <div class="info-banner-text">
            This area is restricted to authorized administrators only. All login attempts are monitored and logged.
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://unpkg.com/lucide@latest"></script>
  <script src="/js/admin-login.js"></script>

</body>

</html>