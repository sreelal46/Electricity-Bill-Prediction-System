<style>
  * {
    box-sizing: border-box;
    font-family: "Segoe UI", sans-serif;
  }

  body {
    margin: 0;
    padding: 30px;
    background: #f4f6f8;
  }

  .admin-latest-page {
    max-width: 1100px;
    margin: auto;
  }

  h1 {
    margin-bottom: 25px;
    color: #222;
  }

  .reading-card {
    background: #fff;
    border-radius: 16px;
    padding: 25px;
    box-shadow: 0 10px 26px rgba(0, 0, 0, 0.07);
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #eee;
    padding-bottom: 12px;
    margin-bottom: 20px;
  }

  .header h2 {
    margin: 0;
    color: #0d6efd;
  }

  .device {
    font-size: 0.9rem;
    color: #777;
    margin-top: 4px;
  }

  .time {
    font-size: 0.85rem;
    color: #777;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 18px;
  }

  .box {
    background: #f9fafb;
    border-radius: 12px;
    padding: 16px;
  }

  .box h4 {
    margin: 0 0 8px;
    font-size: 0.95rem;
    color: #333;
  }

  .box p {
    margin: 4px 0;
    font-size: 0.9rem;
    color: #555;
  }

  .box span {
    font-weight: 600;
    color: #000;
  }

  .highlight {
    color: #0d6efd;
    font-weight: 700;
  }

  .footer {
    margin-top: 20px;
    padding-top: 12px;
    border-top: 1px dashed #eee;
    font-size: 0.85rem;
    color: #777;
  }

  .back-btn {
    display: inline-block;
    margin-top: 25px;
    text-decoration: none;
    color: #0d6efd;
    font-weight: 500;
  }
</style>
<div class="admin-latest-page">
  <a href="/" class="back-btn">
    ‚Üê Back to Home
  </a>
  <h1>üì° User Latest Reading</h1>

  {{#if latestReading}}
  <div class="reading-card">

    <div class="header">
      <div>
        <h2>{{latestReading.user_id}}</h2>
      </div>
      <span class="time">{{latestReading.timestamp}}</span>
    </div>

    <div class="grid">

      <div class="card">
        <h3>‚ö° Energy</h3>
        <p>Daily Energy:
          <span>{{latestReading.daily_energy_wh}} Wh</span>
        </p>
        <p>Daily Units:
          <span>{{latestReading.daily_units}} kWh</span>
        </p>
        <p>Monthly Energy:
          <span>{{latestReading.monthly_energy_wh}} Wh</span>
        </p>
        <p>Monthly Units:
          <span>{{latestReading.monthly_units}} kWh</span>
        </p>
        <p>Total Energy:
          <span>{{latestReading.total_energy_wh}} Wh</span>
        </p>
      </div>

      <div class="card">
        <h3>üîå Power</h3>
        <p>Real Power:
          <span>{{latestReading.power}} W</span>
        </p>
      </div>

      <div class="card">
        <h3>üìü Electrical Values</h3>
        <p>Voltage:
          <span>{{latestReading.voltage}} V</span>
        </p>
        <p>Current:
          <span>{{latestReading.current}} A</span>
        </p>
      </div>

      <div class="card">
        <h3>‚è± Reading Info</h3>
        <p>Timestamp:
          <span>{{latestReading.timestamp}}</span>
        </p>
        <p>User ID:
          <span>{{latestReading.user_id}}</span>
        </p>
      </div>

    </div>

    <div class="footer">
      <span>ID: {{latestReading.id}}</span>
    </div>

  </div>
  {{else}}
  <p>No reading available</p>
  {{/if}}

  <a href="/admin/dashboard" class="back-btn">
    ‚Üê Back to Dashboard
  </a>

</div>