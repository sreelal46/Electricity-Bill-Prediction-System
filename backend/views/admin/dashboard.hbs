<style>
  * {
    box-sizing: border-box;
    font-family: "Segoe UI", sans-serif;
  }

  body {
    margin: 0;
    background: #f4f6f8;
    padding: 30px;
  }

  .admin-page {
    max-width: 1200px;
    margin: auto;
  }

  h1 {
    margin-bottom: 25px;
    color: #222;
  }

  /* ===================== */
  /* Stats Cards */
  /* ===================== */

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }

  .stat-card {
    background: #fff;
    padding: 25px;
    border-radius: 16px;
    box-shadow: 0 10px 26px rgba(0, 0, 0, 0.06);
  }

  .stat-card h3 {
    margin: 0 0 10px;
    font-size: 1rem;
    color: #555;
  }

  .stat-card p {
    margin: 0;
    font-size: 2rem;
    font-weight: 700;
  }

  .stat-card.users {
    border-left: 6px solid #0d6efd;
  }

  .stat-card.alerts {
    border-left: 6px solid #dc3545;
  }

  /* ===================== */
  /* Table */
  /* ===================== */

  .table-card {
    background: #fff;
    padding: 25px;
    border-radius: 16px;
    box-shadow: 0 10px 26px rgba(0, 0, 0, 0.06);
  }

  .table-card h2 {
    margin-top: 0;
    margin-bottom: 20px;
    color: #0d6efd;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  thead {
    background: #f1f3f5;
  }

  th,
  td {
    padding: 12px 10px;
    text-align: left;
    font-size: 0.9rem;
  }

  th {
    color: #333;
  }

  tbody tr {
    border-top: 1px solid #eee;
    transition: background 0.2s ease;
  }

  tbody tr:hover {
    background: #f8f9fa;
  }

  /* Status Badge */

  .status {
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: capitalize;
  }

  .status.active {
    background: #e8f5e9;
    color: #198754;
  }

  .status.inactive {
    background: #f8d7da;
    color: #dc3545;
  }

  .btn {
    padding: 12px 18px;
    border-radius: 10px;
    text-decoration: none;
    background: #0d6efd;
    color: #fff;
    font-weight: 500;
    transition: background 0.2s ease;
  }

  .btn:hover {
    background: #0b5ed7;
  }

  .btn.outline {
    background: #fff;
    color: #0d6efd;
    border: 2px solid #0d6efd;
  }

  .btn.outline:hover {
    background: #e7f1ff;
  }

  .back-btn {
    display: inline-block;
    margin-top: 25px;
    text-decoration: none;
    color: #0d6efd;
    font-weight: 500;
  }
</style>

<div class="admin-page">

  <a href="/" class="back-btn">
    ‚Üê Back to Home
  </a>
  <h1>üõ†Ô∏è Admin Dashboard</h1>

  <!-- Stats Cards -->
  <div class="stats-grid">
    <div class="stat-card users">
      <h3>Total Users</h3>
      <p>{{totalUsers}}</p>
    </div>

    <div class="stat-card alerts">
      <h3>Total Alerts</h3>
      <p>{{totalAlerts}}</p>
    </div>
  </div>

  <!-- Users Table -->
  <div class="table-card" style="margin-bottom: 50px;">
    <h2>üë• Registered Users</h2>

    <table>
      <thead>
        <tr>
          <th>User ID</th>
          <th>Name</th>
          <th>Phase</th>
          <th>Approved Load (kW)</th>
          <th>Status</th>
          <th>Created At</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <td>{{user_id}}</td>
          <td>{{user_name}}</td>
          <td>{{approved_phase}}</td>
          <td>{{approved_load_kw}} kW</td>
          <td>
            <span class="status {{status}}">
              {{status}}
            </span>
          </td>
          <td>{{registration_date}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="actions">
