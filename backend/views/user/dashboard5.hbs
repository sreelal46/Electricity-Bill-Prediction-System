<style>
  * {
    box-sizing: border-box;
    font-family: "Segoe UI", sans-serif;
  }

  body {
    background: #f4f6f8;
    margin: 0;
    padding: 30px;
  }

  .dashboard {
    max-width: 1100px;
    margin: auto;
  }

  h1 {
    margin-bottom: 20px;
    color: #222;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 20px;
    margin-top: 20px;
  }

  .card {
    margin-top: 50px;
    background: #fff;
    border-radius: 14px;
    padding: 20px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.06);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 14px 35px rgba(0, 0, 0, 0.1);
  }

  .card h2,
  .card h3 {
    margin-top: 0;
    margin-bottom: 12px;
    color: #0d6efd;
  }

  .card p {
    margin: 6px 0;
    color: #555;
  }

  .card span {
    font-weight: 600;
    color: #000;
  }

  .actions {
    margin-top: 30px;
    display: flex;
    gap: 15px;
  }

  .btn {
    padding: 12px 18px;
    border-radius: 10px;
    text-decoration: none;
    background: #0d6efd;
    color: #fff;
    font-weight: 500;
    transition: background 0.2s ease;
  }

  .btn:hover {
    background: #0b5ed7;
  }

  .btn.outline {
    background: #fff;
    color: #0d6efd;
    border: 2px solid #0d6efd;
  }

  .btn.outline:hover {
    background: #e7f1ff;
  }

  .back-btn {
    display: inline-block;
    margin-top: 25px;
    text-decoration: none;
    color: #0d6efd;
    font-weight: 500;
  }
</style>

