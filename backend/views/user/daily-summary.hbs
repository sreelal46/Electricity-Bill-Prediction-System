<style>
  * {
    box-sizing: border-box;
    font-family: "Segoe UI", sans-serif;
  }

  body {
    background: #f4f6f8;
    margin: 0;
    padding: 30px;
  }

  .summary-page {
    max-width: 1000px;
    margin: auto;
  }

  h1 {
    margin-bottom: 20px;
    color: #222;
  }

  .summary-grid {
    display: grid;
    gap: 20px;
  }

  .summary-card {
    background: #fff;
    border-radius: 16px;
    padding: 22px;
    box-shadow: 0 10px 26px rgba(0, 0, 0, 0.07);
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #eee;
    padding-bottom: 10px;
    margin-bottom: 18px;
  }

  .header h2 {
    margin: 0;
    color: #0d6efd;
  }

  .badge {
    background: #e7f1ff;
    color: #0d6efd;
    font-size: 0.8rem;
    padding: 4px 10px;
    border-radius: 20px;
    font-weight: 600;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 16px;
  }

  .box {
    background: #f9fafb;
    border-radius: 12px;
    padding: 16px;
  }

  .box h4 {
    margin: 0 0 8px;
    font-size: 0.95rem;
    color: #333;
  }

  .box p {
    margin: 0;
    font-size: 1rem;
    color: #555;
  }

  .box span {
    font-size: 1.2rem;
    font-weight: 700;
    color: #000;
  }

  /* Highlights */
  .highlight {
    background: #e8f5e9;
  }

  .night {
    background: #eef2ff;
  }

  .peak {
    background: #fff3cd;
  }

  .back-btn {
    display: inline-block;
    margin-top: 25px;
    text-decoration: none;
    color: #0d6efd;
    font-weight: 500;
  }
</style>

<div class="summary-page">
  <a href="/" class="back-btn">
    ‚Üê Back to Home
  </a>
  <h1>üìÖ Daily Energy Summary</h1>

  <div class="summary-grid">
    {{#each summaries}}
    <div class="summary-card">

      <div class="header">
        <h2>{{date}}</h2>
        <span class="badge">{{approved_phase}} | {{approved_load_kw}} kW</span>
      </div>

      <div class="grid">

        <div class="box highlight">
          <h4>üîã Total Energy</h4>
          <p><span>{{total_energy_wh}}</span> Wh</p>
          <p>{{total_units}} kWh</p>
        </div>

        <div class="box">
          <h4>üìä Average Power</h4>
          <p><span>{{avg_power_w}}</span> W</p>
        </div>

        <div class="box night">
          <h4>‚¨á Minimum Power</h4>
          <p><span>{{min_power_w}}</span> W</p>
        </div>

        <div class="box peak">
          <h4>‚ö° Peak Power</h4>
          <p><span>{{peak_power_w}}</span> W</p>
        </div>

      </div>

      <div class="footer">
        <small>User: {{user_id}}</small>
      </div>

    </div>
    {{/each}}
  </div>

  <a href="/user/dashboard/USER001" class="back-btn">
    ‚Üê Back to Dashboard
  </a>
</div>