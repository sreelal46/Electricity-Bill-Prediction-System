<style>
  * {
    box-sizing: border-box;
    font-family: "Segoe UI", sans-serif;
  }

  body {
    background: #f4f6f8;
    margin: 0;
    padding: 30px;
  }

  .alerts-page {
    max-width: 1100px;
    margin: auto;
  }

  h1 {
    margin-bottom: 20px;
    color: #222;
  }

  .alerts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 20px;
  }

  .alert-card {
    background: #fff;
    border-radius: 14px;
    padding: 18px;
    box-shadow: 0 8px 22px rgba(0, 0, 0, 0.06);
    border-left: 6px solid #999;
  }

  .alert-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
  }

  .alert-type {
    font-weight: 600;
    color: #333;
  }

  .severity {
    font-size: 0.8rem;
    font-weight: 700;
    padding: 4px 10px;
    border-radius: 20px;
    color: #fff;
  }

  /* Severity colors */
  .severity-HIGH {
    border-left-color: #dc3545;
  }

  .severity-HIGH .severity {
    background: #dc3545;
  }

  .severity-MEDIUM {
    border-left-color: #fd7e14;
  }

  .severity-MEDIUM .severity {
    background: #fd7e14;
  }

  .severity-LOW {
    border-left-color: #198754;
  }

  .severity-LOW .severity {
    background: #198754;
  }

  .alert-body p {
    margin: 6px 0;
    color: #555;
  }

  .alert-footer {
    display: flex;
    justify-content: space-between;
    margin-top: 12px;
    padding-top: 8px;
    border-top: 1px dashed #eee;
    font-size: 0.85rem;
  }

  .status {
    font-weight: 600;
  }

  .status.danger {
    color: #dc3545;
  }

  .status.ok {
    color: #198754;
  }

  .alert-id {
    color: #777;
  }

  .resolved {
    opacity: 0.7;
  }

  .no-alerts {
    color: #555;
    font-size: 1rem;
  }

  .back-btn {
    display: inline-block;
    margin-top: 25px;
    text-decoration: none;
    color: #0d6efd;
    font-weight: 500;
  }
</style>

<div class="alerts-page">
  <a href="/" class="back-btn">
    ‚Üê Back to Home
  </a>

  <h1>üö® Alerts</h1>

  {{#if alerts.length}}
  <div class="alerts-grid">
    {{#each alerts}}
    <div class="alert-card severity-{{severity}} {{#if (eq status 'read')}}resolved{{/if}}">

      <div class="alert-header">
        <span class="alert-type">{{alert_type}}</span>
        <span class="severity">{{severity}}</span>
      </div>

      <div class="alert-body">
        <p><strong>Message:</strong></p>
        <p>{{message}}</p>

        <p><strong>Time:</strong> {{timestamp}}</p>
      </div>

      <div class="alert-footer">
        {{#if (eq status 'read')}}
        <span class="status ok">Read</span>
        {{else}}
        <span class="status danger">Unread</span>
        {{/if}}

        <span class="alert-id">{{id}}</span>
      </div>

    </div>
    {{/each}}
  </div>
  {{else}}
  <p class="no-alerts">No alerts found üéâ</p>
  {{/if}}

  <a href="/user/dashboard/USER001" class="back-btn">
    ‚Üê Back to Dashboard
  </a>
</div>