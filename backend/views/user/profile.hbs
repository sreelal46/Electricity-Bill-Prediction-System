    background: rgba(16, 185, 129, 0.1);
    color: var(--accent-green);
  }

  .status-badge.inactive {
    background: rgba(148, 163, 184, 0.1);
    color: var(--text-secondary);
  }

  .status-badge svg {
    width: 12px;
    height: 12px;
  }

  /* Stats Cards */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
