  .stats-card:nth-child(2) {
    animation-delay: 0.2s;
  }

  .stats-card:nth-child(3) {
    animation-delay: 0.3s;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .info-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .profile-header {
      flex-direction: column;
      gap: 1.5rem;
      align-items: flex-start;
    }

    .profile-identity {
      width: 100%;
    }

    .profile-avatar {
      width: 100px;
