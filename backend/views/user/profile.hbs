<link rel="stylesheet" href="/css/user-profile.css">

<div class="container">
  <!-- HEADER -->
  <header class="header">
    <div class="header-content">
      <h1>
        <i data-lucide="user-circle"></i>
        User Profile
      </h1>
      <div class="header-subtitle">
        <span class="status-indicator"></span>
        <span>Account information and settings</span>
      </div>
    </div>
  </header>

  <!-- PROFILE CARD -->
  <div class="profile-card">
    <!-- Banner -->
    <div class="profile-banner"></div>

    <div class="profile-content">
      <!-- Header with Avatar -->
      <div class="profile-header">
        <div class="profile-identity">
          <div class="profile-avatar">
            {{#if user.name}}
            {{substring user.name 0 2}}
            {{else}}
            U
            {{/if}}
          </div>
          <div class="profile-info">
            <h2>{{user.name}}</h2>
            <div class="profile-role">
              <i data-lucide="zap"></i>
              <span>Energy Consumer • ID: {{user.id}}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Info Sections -->
      <div class="info-grid">
        <!-- Contact Information -->
        <div class="info-section">
          <h3>
            <i data-lucide="contact"></i>
            Contact Information
          </h3>

          <div class="info-item">
            <div class="info-icon">
              <i data-lucide="mail"></i>
            </div>
            <div class="info-text">
              <div class="info-label">Email Address</div>
              <div class="info-value">{{user.email}}</div>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">
              <i data-lucide="phone"></i>
            </div>
            <div class="info-text">
              <div class="info-label">Phone Number</div>
              <div class="info-value">{{user.phoneNumber}}</div>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">
              <i data-lucide="map-pin"></i>
            </div>
            <div class="info-text">
              <div class="info-label">Address</div>
              <div class="info-value">{{user.address}}</div>
            </div>
          </div>
        </div>

        <!-- Connection Details -->
        <div class="info-section">
          <h3>
            <i data-lucide="plug"></i>
            Connection Details
          </h3>
          <div class="info-item">
            <div class="info-icon">
              <i data-lucide="hash"></i>
            </div>
            <div class="info-text">
              <div class="info-label">Consumer Number</div>
              <div class="info-value">{{user.consumerNumber}}</div>
            </div>
          </div>
          <div class="info-item">
            <div class="info-icon">
              <i data-lucide="zap"></i>
            </div>
            <div class="info-text">
              <div class="info-label">Approved Load</div>
              <div class="info-value">{{user.approved_load_kw}} kW</div>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">
              <i data-lucide="waves"></i>
            </div>
            <div class="info-text">
              <div class="info-label">Phase Type</div>
              <div class="info-value">{{user.approved_phase}}</div>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">
              <i data-lucide="calendar"></i>
            </div>
            <div class="info-text">
              <div class="info-label">Registration Date</div>
              <div class="info-value">{{formatDate user.registration_date}}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- STATS CARDS -->
  <div class="stats-grid">
    <div class="card stats-card fade-in-up">
      <div class="stats-icon">
        <i data-lucide="clock"></i>
      </div>
      <h3 id="daysSince">0</h3>
      <p>Days Since Registration</p>
    </div>

    <div class="card stats-card fade-in-up">
      <div class="stats-icon">
        <i data-lucide="activity"></i>
      </div>
      <h3>{{user.approved_load_kw}} kW</h3>
      <p>Approved Load Capacity</p>
    </div>

    <div class="card stats-card fade-in-up">
      <div class="stats-icon">
        <i data-lucide="trending-up"></i>
      </div>
      <h3 id="phaseType">—</h3>
      <p>Connection Type</p>
    </div>
  </div>
</div>
<script src="https://unpkg.com/lucide@latest"></script>
<script>
  // ========================================
  // CALCULATE DAYS SINCE REGISTRATION
  // ========================================
  const registrationDate = '{{user.registration_date}}';
  if (registrationDate) {
    const regDate = new Date(registrationDate);
    const today = new Date();
    const diffTime = Math.abs(today - regDate);
    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
    document.getElementById('daysSince').textContent = diffDays;
  }

  // ========================================
  // SET PHASE TYPE
  // ========================================
  const phaseType = '{{user.approved_phase}}';
  document.getElementById('phaseType').textContent = phaseType || '—';

  // ========================================
  // INITIALIZE LUCIDE ICONS
  // ========================================
  lucide.createIcons();
</script>