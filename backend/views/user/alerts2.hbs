    if (alert.type === "critical") {
      bgColor = "bg-red-50 border-red-200";
      textColor = "text-red-600";
      icon = "ðŸš¨";
      criticalCount++;
    } else if (alert.type === "warning") {
      bgColor = "bg-yellow-50 border-yellow-200";
      textColor = "text-yellow-600";
      icon = "âš ";
      warningCount++;
    } else {
      bgColor = "bg-blue-50 border-blue-200";
      textColor = "text-blue-600";
      icon = "â„¹";
    }

    container.innerHTML += `
    <div class="flex justify-between items-center border ${bgColor} p-5 rounded-xl">
      <div class="flex items-start gap-4">
        <div class="w-10 h-10 flex items-center justify-center rounded-lg ${textColor} text-xl">
          ${icon}
        </div>
        <div>
          <p class="font-medium ${textColor}">
            ${alert.title}
          </p>
          <p class="text-sm text-slate-500">
            ${alert.time}
          </p>
        </div>
      </div>
      <button onclick="dismissAlert(this)" class="text-slate-400 hover:text-black">
        âœ•
      </button>
    </div>
  `;
  });


  /* ---------------------------
     Update Counters
  --------------------------- */

  document.getElementById("criticalCount").innerText = criticalCount;
  document.getElementById("warningCount").innerText = warningCount;


  /* ---------------------------
     Dismiss Function
  --------------------------- */

  function dismissAlert(btn) {
    btn.closest("div").remove();
  }

</script>